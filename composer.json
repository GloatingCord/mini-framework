{
    "name": "gloatingcord26/mini-framework",
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Framework\\": "framework/"
        }
    },
    "require": {
        "psr/http-message": "^1.0",
        "psr/log": "^3.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.7",
        "phpunit/phpunit": "^9.5",
        "phpmd/phpmd": "^2.12"
    },
    "scripts": {
        "phpstan": [
            "vendor/bin/phpstan analyze --level max public/ framework/Classes/ framework/Routing app/Controlling/"
        ],
        "phpmd": [
            "phpmd framework/ xml Testing/rulesets.xml"
        ],
        "phpunit": [
            "vendor/bin/phpunit Testing/OutputTest.php"
        ],
        "test": [
            "@phpunit",
            "@phpmd",
            "@phpstan"
        ]
    }
}
