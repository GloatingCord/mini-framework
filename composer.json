{
    "name": "gloatingcord26/mini-framework",
    "autoload": {
        "psr-4": {
            "Main\\": "Classes/",
            "Files\\": "Files/",
            "Controller\\": "Controllers/"
        }
    },
    "require": {
        "psr/http-message": "^1.0",
        "psr/log": "^3.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.7",
        "phpunit/phpunit": "^9.5",
        "phpmd/phpmd": "^2.12"
    },
    "scripts": {
        "phpstan": [
            "phpstan analyze --level max Public/ Classes/ Controllers/"
        ],
        "phpmd": [
            "phpmd Public/ xml test/rulesets.xml"
        ],
        "phpunit": [
            "vendor/bin/phpunit test/OutputTest.php"
        ],
        "test": [
            "@phpunit",
            "@phpmd",
            "@phpstan"
        ]
    }
}
