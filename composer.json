{
    "name": "gloatingcord26/mini-framework",
    "autoload": {
        "psr-4": {
            "Main\\": "Classes/",
            "Files\\": "Files/",
            "Controller\\": "Controllers/"
        }
    },
    "require": {
        "psr/http-message": "^1.0",
        "psr/log": "^3.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.7"
    },
    "scripts": {
        "phpstan": [
            "phpstan analyze --level max src"
        ],
        "phpmd": [
            "phpmd src xml rulesets.xml"
        ],
        "test": [
            "@phpmd",
            "@phpstan"
        ]
    }
}
